run = "python3 main.py"
modules = ["python-3.11"]
[nix]
channel = "stable-25_05"
packages = ["python3"]

[workflows]
runButton = "Run Web App"

[[workflows.workflow]]
name = "Run MotivAgent"
author = 42203167
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow]]
name = "Run Web App"
author = 42203167
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0"

[deployment]
run = ["sh", "-c", "streamlit run app.py --server.port=5000 --server.address=0.0.0.0"]
